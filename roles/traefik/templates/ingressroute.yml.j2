---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: traefik-dashboard
  namespace: {{namespace}}
spec:
  entryPoints:
    - web
    - websecure
  routes:
    - match: Host(`{{trafik_url}}`)
      kind: Rule
      services:
        - name: api@internal
          kind: TraefikService
      middlewares:
        - name: auth
  # Use the secret generated by cert-manager
  tls:
    secretName: {{trafik_url}}